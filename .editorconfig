root = true

[{.github/**.yml,*.md,docs/**.md,test/*.md}]
charset                  = utf-8
end_of_line              = lf
insert_final_newline     = true

[{CMakeLists.txt}]
charset                  = utf-8
end_of_line              = lf
indent_size              = 4
indent_style             = space
insert_final_newline     = true

[{*,.vscode/**,test/data/**}.json]
charset                  = utf-8
end_of_line              = lf
indent_size              = 2
indent_style             = space
insert_final_newline     = false

[{src/**}]
charset                  = utf-8
end_of_line              = lf
indent_size              = 4
indent_style             = tab
insert_final_newline     = true
trim_trailing_whitespace = true
